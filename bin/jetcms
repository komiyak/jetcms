#!/usr/bin/env ruby

require 'jetcms'

# jetcms command.
jetcms_cmd = ARGV[0]


# Application new.
if "new" == jetcms_cmd
  # second argment use generate directory name.
  directory_name = ARGV[1]

  if directory_name.nil?
    puts "Error: less argments."
    exit
  else
    Jetcms::Command.generate_files(directory_name)  
  end
end


# EOF